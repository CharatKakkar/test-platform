{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18",
    "codebase": "default"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/api/create-checkout-session",
        "function": "api"
      },
      {
        "source": "/api/verify-session",
        "function": "api"
      },
      {
        "source": "/api/check-payment-status",
        "function": "api"
      },
      {
        "source": "/api/get-session",
        "function": "api"
      },
      {
        "source": "/api/stripe-webhook",
        "function": "api"
      }
    ]
  }
}